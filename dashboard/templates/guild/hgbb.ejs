<%- include('../blocks/header', {bot, user, path}) %>
<div class="container">
	<div class="row justify-content-md-center">
		<h2 style="color: #fff;">Sunucu Yönetimi</h2>
	</div>
	<div class="row">
		<div class="col col-4">
			<%- include('../blocks/guild-card', {guild}) %>
		</div>
		<div class="col">
			<%- include('../blocks/guild-nav.ejs', {active: "hgbb", guild}) %>
			<form method="post">
				<ul class="list-group list-group-flush">
          <li class="list-group-item" style="padding: 0; background-color: #525656;"> </li>
                      
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 3 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px;">Embed HGBB Kanalı</div>
                              <% if (bot.ayar.has(`hgbbkanal_${guild.id}`) === false) { %>
          <select style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="hgbbkanal" id="hgbbkanal">
            <option disabled selected>Lütfen bir kanal seçiniz.</option>
            <% guild.channels.filter(c => c.type === "text").forEach(c => { %>
            <option value="<%=c.id%>">#<%=c.name%></option>
            <% }); %>
          </select>
          <% } %>
					<% if(bot.ayar.has(`hgbbkanal_${guild.id}`) === true) { %>
          <select style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="hgbbkanal" id="hgbbkanal">
            <option value="<%=bot.ayar.fetch(`hgbbkanal_${guild.id}`)%>">#<%=guild.channels.get(bot.ayar.fetch(`hgbbkanal_${guild.id}`)).name%></option>
					 <% guild.channels.filter(c => c.type === "text").filter(c => c.id !== bot.ayar.fetch(`hgbbkanal_${guild.id}`)).forEach(c => { %>
            <option value="<%=c.id%>">#<%=c.name%></option>
          <% }); %>
          </select>
          <a href="/dashboard/<%=guild.id%>/hgbbkanal/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
          <% } %>
        </div>
          <center><h4 style="color:white">------------------------------------------------</h4></center>
                  <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 6 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px;">Resimli HGBB Kanalı</div>
                  <% if (bot.ayar.has(`resimlihgbb_${guild.id}`) === false) { %>
          <select style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbkanal" id="resimlihgbbkanal">
            <option disabled selected>Lütfen bir kanal seçiniz.</option>
            <% guild.channels.filter(c => c.type === "text").forEach(c => { %>
            <option value="<%=c.id%>">#<%=c.name%></option>
            <% }); %>
          </select>
          <% } %>
					<% if(bot.ayar.has(`resimlihgbb_${guild.id}`) === true) { %>
          <select style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbkanal" id="resimlihgbbkanal">
            <option value="<%=bot.ayar.fetch(`resimlihgbb_${guild.id}`)%>">#<%=guild.channels.get(bot.ayar.fetch(`resimlihgbb_${guild.id}`)).name%></option>
					 <% guild.channels.filter(c => c.type === "text").filter(c => c.id !== bot.ayar.fetch(`resimlihgbb_${guild.id}`)).forEach(c => { %>
            <option value="<%=c.id%>">#<%=c.name%></option>
          <% }); %>
          </select>
          <a href="/dashboard/<%=guild.id%>/resimlihgbbkanal/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
          <% } %>
        </div>
          
                   <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 5 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px; ">Resimli HGBB Giriş Mesajı</div>
                             <% if (bot.ayar.has(`premium_${guild.id}`) === false) { %>
                             	<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbgirismesaj" id="resimlihgbbgirismesaj" maxlength="150" placeholder="Bu özellik sadece premium sunucular içindir." disabled>
                             <% } %>
                              <% if (bot.ayar.has(`premium_${guild.id}`) === true) { %>
              <% if (bot.ayar.has(`resimliGirisM_${guild.id}`) === false) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbgirismesaj" id="resimlihgbbgirismesaj" maxlength="150" placeholder="Örnek: -uye- Hoşgeldin! Seninle beraber -uyesayisi- Kişiyiz!">
              <% } %>
              
							<% if(bot.ayar.has(`resimliGirisM_${guild.id}`) === true) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbgirismesaj" id="resimlihgbbgirismesaj" maxlength="150" value="<%= bot.ayar.fetch(`resimliGirisM_${guild.id}`) %>" placeholder="Örnek: -uye- Hoşgeldin! Seninle beraber -uyesayisi- Kişiyiz!">
                    <a href="/dashboard/<%=guild.id%>/resimlihgbbgirismesaj/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
              <% } %>
                              <% } %>
						</div>
          
                             <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 5 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px; ">Resimli HGBB Çıkış Mesajı</div>
                             <% if (bot.ayar.has(`premium_${guild.id}`) === false) { %>
                             	<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbcikismesaj" id="resimlihgbbcikismesaj" maxlength="150" placeholder="Bu özellik sadece premium sunucular içindir." disabled>
                             <% } %>
                              <% if (bot.ayar.has(`premium_${guild.id}`) === true) { %>
              <% if (bot.ayar.has(`resimliCikisM_${guild.id}`) === false) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbcikismesaj" id="resimlihgbbcikismesaj" maxlength="150" placeholder="Örnek: -uye- Hoşgeldin! Seninle beraber -uyesayisi- Kişiyiz!">
              <% } %>
              
							<% if(bot.ayar.has(`resimliCikisM_${guild.id}`) === true) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="resimlihgbbcikismesaj" id="resimlihgbbcikismesaj" maxlength="150" value="<%= bot.ayar.fetch(`resimliCikisM_${guild.id}`) %>" placeholder="Örnek: -uye- Hoşgeldin! Seninle beraber -uyesayisi- Kişiyiz!">
                    <a href="/dashboard/<%=guild.id%>/resimlihgbbcikismesaj/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
              <% } %>
                              <% } %>
						</div>
          
        </ul>
          
				<div style="width: 100%; text-align: right; margin-top: 20px;">
					<a class="btn btn-danger" data-toggle="modal" data-target="#settingsResetModal" role="button" style="color: #ffffff;">Ayarları Sıfırla<i class="fa fa-fw fa-cogs" aria-hidden="true"></i></a>
					<button type="submit" class="btn btn-primary">Değişiklikleri Kaydet<i class="fa fa-fw fa-save" aria-hidden="true"></i></button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../blocks/guild-modals %>
<script type="text/javascript">
	var ts = parseInt($('#guildCreate').text());
	$('#guildCreate').html(`<strong>Created:</strong>: ${moment(ts).format('MMMM Do YYYY (h:mm a)')}`);
</script>
