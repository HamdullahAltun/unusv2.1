<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
  <script data-ad-client="ca-pub-3227302706684816" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>
<%- include('../blocks/header', {bot, user, path}) %>
<div class="container">
	<div class="row justify-content-md-center">
		<h2 style="color: #fff;">Sunucu Yönetimi</h2>
	</div>
	<div class="row">
		<div class="col col-4">
			<%- include('../blocks/guild-card', {guild}) %>
		</div>
		<div class="col">
			<%- include('../blocks/guild-nav.ejs', {active: "genel", guild}) %>
			<form method="post">
				<ul class="list-group list-group-flush">
          <li class="list-group-item" style="padding: 0; background-color: #525656;"> </li>
                      
                 <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 5 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px; ">Prefix</div>
              <% if (bot.ayar.has(`prefix.${guild.id}`) === false) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="prefix" id="prefix" maxlength="15" placeholder="*">
              <% } %>
              
							<% if(bot.ayar.has(`prefix.${guild.id}`) === true) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="prefix" id="prefix" value="<%= bot.ayar.fetch(`prefix.${guild.id}`) %>" maxlength="15" placeholder="*">
                    <a href="/dashboard/<%=guild.id%>/prefix/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
              <% } %>
						</div>
            
                           <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 5 !important;">
              <div class="input-group-addon" style="width: 150px; text-align: center; margin: 5.5px; color: #ffffff; font-size: 15px; ">Ototag</div>
              <% if (bot.ayar.has(`ototag_${guild.id}`) === false) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="ototag" id="ototag" maxlength="100" placeholder="Örnek: ❆ | -uye-">
              <% } %>
              
							<% if(bot.ayar.has(`ototag_${guild.id}`) === true) { %>
								<input type="text" style="text-align: left; width:60%; border:2px solid #456879; border-radius:10px;" name="ototag" id="ototag" value="<%= bot.ayar.fetch(`ototag_${guild.id}`) %>" maxlength="100" placeholder="Örnek: ❆ | -uye-">
                    <a href="/dashboard/<%=guild.id%>/ototag/sifirla" class="btn btn-danger" style="color: #ffffff;" role="button">Sıfırla</a>
              <% } %>
						</div>
      
      
          
        </ul>
          
				<div style="width: 100%; text-align: right; margin-top: 20px;">
					<a class="btn btn-danger" data-toggle="modal" data-target="#settingsResetModal" role="button" style="color: #ffffff;">Ayarları Sıfırla<i class="fa fa-fw fa-cogs" aria-hidden="true"></i></a>
					<button type="submit" class="btn btn-primary">Değişiklikleri Kaydet<i class="fa fa-fw fa-save" aria-hidden="true"></i></button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../blocks/guild-modals %>
<script type="text/javascript">
	var ts = parseInt($('#guildCreate').text());
	$('#guildCreate').html(`<strong>Created:</strong>: ${moment(ts).format('MMMM Do YYYY (h:mm a)')}`);
</script>
<% include ../blocks/footer %>
